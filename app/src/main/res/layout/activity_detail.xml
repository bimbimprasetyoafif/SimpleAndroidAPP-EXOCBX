<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dicoding.assosiate.exo_cbxprofile.DetailActivity">


<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableRow></TableRow>
    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        style="@style/for_detail_page_color"
        android:id="@+id/name_detail"
        android:text="@string/name"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="226dp"
        android:textSize="20dp"/>



</TableLayout>

    <TextView
        android:id="@+id/ttl_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="199dp"
        android:text="@string/ttl_describe" />

    <TextView
        android:id="@+id/describtion"
        style="@style/for_detail_page_color"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:gravity="bottom"
        android:text="@string/describtion"
        android:textSize="9dp"
        android:textStyle="normal" />


</RelativeLayout>